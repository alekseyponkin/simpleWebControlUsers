<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <resource-ref>
        <description>Primary database</description>
        <res-ref-name>jdbc/postgres</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <filter>
        <filter-name>SingUpFilter</filter-name>
        <filter-class>ru.aponkin.filter.SingInFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SingUpFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--Controller-->
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>ru.aponkin.controller.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserCreateServlet</servlet-name>
        <servlet-class>ru.aponkin.controller.UserCreateController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserCreateServlet</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserUpdateServlet</servlet-name>
        <servlet-class>ru.aponkin.controller.UserUpdateController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserUpdateServlet</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>

    <!--Servlet-->
    <servlet>
        <servlet-name>UsersServlet</servlet-name>
        <servlet-class>ru.aponkin.servlet.UsersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UsersServlet</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EchoServlet</servlet-name>
        <servlet-class>ru.aponkin.servlet.EchoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EchoServlet</servlet-name>
        <url-pattern>/echo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SingInController</servlet-name>
        <servlet-class>ru.aponkin.controller.SingInController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SingInController</servlet-name>
        <url-pattern>/singin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SingOutController</servlet-name>
        <servlet-class>ru.aponkin.controller.SingOutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SingOutController</servlet-name>
        <url-pattern>/singout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AjaxController</servlet-name>
        <servlet-class>ru.aponkin.controller.AjaxController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AjaxController</servlet-name>
        <url-pattern>/ajax</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CountryCityAjaxController</servlet-name>
        <servlet-class>ru.aponkin.controller.CountryCityAjaxController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CountryCityAjaxController</servlet-name>
        <url-pattern>/country-city</url-pattern>
    </servlet-mapping>
</web-app>

